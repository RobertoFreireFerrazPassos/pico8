butarr={1,2,0,3,5,6,3,4,8,7,4,0,1,2,0}
butarr[0]=0
dirx={-1,1, 0,0,-0.7, 0.7,0.7,-0.7}
diry={ 0,0,-1,1,-0.7,-0.7,0.7, 0.7}

function getxy()
  local a,b,dir=p.x,p.y,butarr[btn()&0b1111]

  if lastdir!=dir and dir>=5 then
	  a=flr(a)+0.5
	  b=flr(b)+0.5
	 end	 
	 if dir>0 then
	  a+=dirx[dir]
	  b+=diry[dir]
  end

	 lastdir=dir

	 return {x=a,y=b}
end

p = {
	sprt=1,
	x=63,
	y=63,
	box={x=1,y=1,w=6,h=5},
	control = function()
		local lx,ly,ce=p.x,p.y,false
		local xy=getxy()
		
		foreach(enemies, function(e)
			if rects_overlap({x=xy.x,y=p.y,box=p.box},e) then
				ce=true
			end
		end)
		
		if ce==false and collideflag(xy.x,p.y,1)==false then
			p.x=xy.x
		end
		
		ce=false
		
		foreach(enemies, function(e)
			if rects_overlap({x=p.x,y=xy.y,box=p.box},e) then
				ce=true
			end
		end)
		
		if ce==false and collideflag(p.x,xy.y,1)==false then
			p.y=xy.y
		end
	end
}
